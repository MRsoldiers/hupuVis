{
  "compilerOptions": {
    "outDir": "./built/",
    "sourceMap": true,
    "strict": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es6",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true
  },
  "include": [
    "./build/**/*",
    "./config/**/*",
    "./src/server/**/*",
    "./src/typings/**/*"
  ]
}
